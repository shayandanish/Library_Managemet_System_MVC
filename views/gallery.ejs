<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      .lightbox {
        position: fixed;
        inset: 0;
        display: none;
        align-items: center;
        justify-content: center;
        background: rgba(0, 0, 0, 0.75);
        z-index: 50;
      }
      .lightbox.show {
        display: flex;
      }
      .lightbox img {
        max-width: 90vw;
        max-height: 85vh;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.6);
      }
    </style>
  </head>
  <body class="min-h-screen bg-slate-50 text-slate-800 flex flex-col">
    <!-- HEADER -->
    <header
      class="bg-white/90 backdrop-blur border-b shadow-sm sticky top-0 z-20"
    >
      <div
        class="max-w-7xl mx-auto px-4 sm:px-6 py-3 flex items-center justify-between gap-3 flex-wrap"
      >
        <!-- Left: Title -->
        <a
          href="/"
          class="text-base sm:text-lg md:text-2xl font-bold text-blue-700 leading-tight"
        >
          AIPS Library Islamabad – Gallery
        </a>

        <!-- Right: Nav -->
        <nav
          class="flex items-center gap-3 text-xs sm:text-sm md:text-base font-medium text-slate-600"
        >
          <a href="/" class="hover:text-blue-700">Home</a>
          <a href="/books" class="hover:text-blue-700">Books</a>
          <a
            href="/gallery"
            class="text-blue-700 border-b-2 border-blue-700 pb-[2px]"
          >
            Gallery
          </a>
        </nav>
      </div>
    </header>

    <!-- MAIN -->
    <main class="flex-grow">
      <section class="max-w-7xl mx-auto px-4 sm:px-6 py-8 md:py-10">
        <div
          class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 mb-6"
        >
          <div>
            <h1 class="text-2xl sm:text-3xl font-bold text-slate-900">
              Library Gallery
            </h1>
            <p class="text-sm sm:text-base text-slate-500 mt-1 max-w-xl">
              A visual look at the study spaces, shelves, and reading areas at
              AIPS Library Islamabad.
            </p>
          </div>

          <a
            href="/"
            class="inline-flex items-center justify-center rounded-full border border-slate-300 px-3 py-1.5 text-xs sm:text-sm text-slate-600 hover:bg-slate-100 transition-colors"
          >
            ← Back to Home
          </a>
        </div>

        <% if (!images || images.length === 0) { %>
        <div
          class="p-6 bg-white rounded-2xl border border-dashed border-slate-300 shadow-sm text-center"
        >
          <p class="text-sm text-slate-600 mb-1">
            No images yet in the gallery.
          </p>
          <p class="text-xs text-slate-400">
            Add files to
            <code class="px-1 py-[2px] rounded bg-slate-100 text-[11px]"
              >/public/images/gallery</code
            >
            to display them here.
          </p>
        </div>
        <% } else { %>

        <!-- GALLERY GRID -->
        <div
          class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-3 sm:gap-4"
        >
          <% images.forEach(function(name) { %>
          <button
            class="group relative overflow-hidden rounded-2xl bg-white border border-slate-200 shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:ring-offset-slate-50"
            data-full="/images/gallery/<%= name %>"
          >
            <div class="aspect-[4/3] w-full overflow-hidden">
              <img
                src="/images/gallery/<%= name %>"
                class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                alt="<%= name %>"
                loading="lazy"
              />
            </div>

            <!-- Overlay on hover (desktop) -->
            <div
              class="pointer-events-none absolute inset-0 bg-gradient-to-t from-black/50 via-black/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"
            ></div>
            <div
              class="pointer-events-none absolute bottom-2 left-2 right-2 flex items-center justify-between opacity-0 group-hover:opacity-100 transition-opacity"
            >
              <span
                class="text-[11px] sm:text-xs font-medium text-slate-50 line-clamp-1 bg-black/40 px2 py-[2px] rounded"
              >
                <%= name %>
              </span>
              <span
                class="hidden sm:inline-flex items-center text-[11px] text-slate-100 bg-black/40 px-2 py-[2px] rounded-full"
              >
                Tap to view
              </span>
            </div>
          </button>
          <% }) %>
        </div>
        <% } %>
      </section>
    </main>

    <!-- LIGHTBOX -->
    <div id="lightbox" class="lightbox">
      <img id="lightbox-img" alt="" />
      <!-- Download button in lightbox -->
      <a
        id="downloadBtn"
        href="#"
        download
        class="absolute bottom-6 right-6 bg-white text-slate-800 text-xs sm:text-sm font-semibold px-3 py-1.5 rounded-md shadow-lg hover:bg-slate-100 transition-colors"
      >
        Download
      </a>
    </div>

    <script>
      const lb = document.getElementById("lightbox");
      const img = document.getElementById("lightbox-img");
      const downloadBtn = document.getElementById("downloadBtn");

      document.addEventListener("click", (e) => {
        const b = e.target.closest("button[data-full]");
        if (b) {
          const fullSrc = b.dataset.full;
          img.src = fullSrc;
          downloadBtn.href = fullSrc;
          lb.classList.add("show");
        } else if (e.target === lb) {
          lb.classList.remove("show");
          img.removeAttribute("src");
          downloadBtn.removeAttribute("href");
        }
      });

      document.addEventListener("keydown", (e) => {
        if (e.key === "Escape") {
          lb.classList.remove("show");
          img.removeAttribute("src");
          downloadBtn.removeAttribute("href");
        }
      });
    </script>
  </body>
</html>
